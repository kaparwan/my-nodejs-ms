{
  "name": "my-nodejs-ms",
  "version": "0.1.0",
  "keywords": [],
  "description": "NodeJS template for lambda deployment",
  "engines": {
    "node": "12 || 14"
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "commit": "git cz",
    "test": "env-cmd -f src/config/test.env npm run format && npm run test:unit",
    "format": "prettier --write '{src,test}/**/*.js' ",
    "lint": "eslint --fix '{src,test}/**/*.js'",
    "test:unit": "jest --coverage",
    "test:single": "jest --no-coverage --watchAll",
    "dev": "env-cmd -f src/config/dev.env nodemon src/server.js",
    "start": "node src/server.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "env-cmd": "^10.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.7.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.4",
    "nodemon": "^2.0.7",
    "prettier": "^1.17.1",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "compression": "^1.7.4"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm t"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{json,md,js}": [
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
